<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/egypt"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="center"
        android:contentDescription="logo air image"
        app:srcCompat="@drawable/egypt" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/egypt"
        android:padding="15dp"
        android:text="EGYPT AIR"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/description"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        app:srcCompat="@drawable/phone" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/web"
        android:layout_below="@id/description"
        android:layout_toRightOf="@id/phone_icon"
        android:padding="14dp"
        android:text="+20-2269-66798"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/web"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phone_icon"
        android:layout_alignStart="@id/phone_icon"
        android:layout_alignLeft="@id/phone_icon"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/email" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/web"
        android:layout_alignLeft="@id/phone"
        android:padding="14dp"
        android:text="wecare@egyptair.com"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/Address"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/web"
        android:layout_below="@id/web"
        android:layout_alignStart="@+id/web"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/address"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/Address"
        android:layout_alignLeft="@id/Address"
        android:gravity="center"
        android:layout_below="@id/web"
        android:layout_marginLeft="50dp"
        android:padding="14dp"
        android:text="@string/south_building_second_floor_airport_road_cairo_egypt"
        android:textColor="@android:color/black"
        android:textSize="16sp" />


</RelativeLayout>
